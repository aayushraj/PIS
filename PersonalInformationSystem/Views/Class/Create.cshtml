@model PersonalInformationSystem.Models.ClassModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    @Html.ValidationSummary(true)
    <div class="row table-drop">

        <div class="col-xs-12">

            <div class="panel panel-primary">
                <div class="panel-heading">

                    <h4>Add Class Information</h4>

                </div>
                <div class="panel-body">

                    <div class="col-xs-12 form-position">
                        <div class="row">

                            <div class="col-xs-12 col-sm-4 form-group">
                                <div class="row">

                                    <div class="col-xs-12"><label>Class name</label></div>
                                    <div class="col-xs-12">
                                        @Html.TextBoxFor(model => model.ClassName, htmlAttributes: new { @class = "form-control", @placeholder = "Class Name" })
                                        @Html.ValidationMessageFor(model => model.ClassName)
                                    </div>
                                </div>
                            </div>



                            <div class="row col-xs-12">
                                <div class="col-xs-6 col-sm-6 ">
                                    <div class=" col-xs-12 col-sm-4">
                                        <input type="submit" class="btn btn-lg btn-success" value="Save" />
                                    </div>

                                    <div class=" col-xs-12 col-sm-4 ">@Html.ActionLink("Cancel", "Index", "StudentInfo", htmlAttributes: new { @class = "btn btn-lg btn-danger" })</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}

