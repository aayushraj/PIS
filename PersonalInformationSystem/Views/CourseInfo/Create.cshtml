@model PersonalInformationSystem.CourseInfo

@{
    ViewBag.Title = "New Course";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    
    
    @Html.ValidationSummary(true)

    <div class="row table-drop">

        <div class="col-xs-12">

            <div class="panel panel-primary">
                <div class="panel-heading">

                    <h4>Add Cousre Information</h4>

                </div>
                <div class="panel-body">
                    <div class="col-xs-12">


                        <div class="clearfix"></div>

                        <div class="col-xs-12 col-sm-4 form-group">
                            <div class="row">

                                <div class="col-xs-12"><label>Course name</label></div>
                                <div class="col-xs-12">
                                    @Html.TextBoxFor(model => model.CourseName, htmlAttributes: new { @class = "form-control", @placeholder = "Course Name" })
                                    @Html.ValidationMessageFor(model => model.CourseName)
                                </div>

                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div class="col-xs-12 col-sm-4 form-group">
                            <div class="row">
                                <div class="col-xs-12"><label>Course Description</label></div>
                                <div class="col-xs-12">
                                    @Html.TextAreaFor(model => model.CourseDesc, htmlAttributes: new { @class = "form-control", @placeholder = "Description" })
                                    @Html.ValidationMessageFor(model => model.CourseDesc)
                                </div>
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div class="col-xs-12 col-sm-4 form-group">
                            <div class="row">
                                <div class="col-xs-12"><label>Course Duration</label></div>
                                <div class="col-xs-12">
                                    @Html.TextBoxFor(model => model.CourseDuration, htmlAttributes: new { @class = "form-control", @placeholder = "Duration" })
                                    @Html.ValidationMessageFor(model => model.CourseDuration)
                                </div>
                            </div>
                        </div>




                        <div class="clearfix"></div>
                        <div class="col-xs-12 col-sm-4 form-group">
                            <div class="row">
                                <div class="col-xs-12"><label>Facilitator</label></div>
                                <div class="col-xs-12">
                                    @Html.TextBoxFor(model => model.Facilitator, htmlAttributes: new { @class = "form-control", @placeholder = "Facilitator Name" })
                                    @Html.ValidationMessageFor(model => model.Facilitator)
                                </div>
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <div class="col-xs-12 col-sm-4 form-group">
                            <div class="row">
                                <div class="col-xs-12"><label>Course Amount</label></div>
                                <div class="col-xs-12">
                                    @Html.TextBoxFor(model => model.CourseAmount, htmlAttributes: new { @class = "form-control", @placeholder = "Amount" })
                                    @Html.ValidationMessageFor(model => model.CourseAmount)
                                </div>
                            </div>
                        </div>





                        <div class="row col-xs-12">
                            <div class="col-xs-4 ">
                                <div class="registerbtn col-xs-6">
                                    <input type="submit" class="btn btn-lg btn-success" value="Save" />
                                </div>
                                <div class="registerbtn col-xs-6">@Html.ActionLink("Cancel", "Index", "CourseInfo", htmlAttributes: new { @class = "btn btn-lg btn-danger" });</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




}
