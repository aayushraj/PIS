@model PersonalInformationSystem.Models.CourseInfoModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int i = 1;
}

@Html.AntiForgeryToken()


    

<div class="clearfix"></div>

<div class="row table-drop">

    <div class="col-lg-12">

        @* Messages Section Start *@

        @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    @TempData["Success"]
                </div>
            }
        @if (TempData["Update"] != null)
            {
                <div class="alert alert-info alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    @TempData["Update"]
                </div>
            }

        @if (TempData["Delete"] != null)
            {
                <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    @TempData["Delete"]
                </div>
            }

        @* Messages Section End *@




        <div class="panel panel-primary">
            <div class="panel-heading">
                
                <h4>Course List Table</h4>

            </div>


            <div class="panel-body">

                <div class="col-xs-4 input-group custom-search-form pull-right">
                    <input type="text" class="form-control" placeholder="Search">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>

                <div class="pull-left add">

                    <p> @Html.ActionLink("Add New", "Create", "CourseInfo", htmlAttributes: new { @class = "btn btn-success" })</p>

                </div>

                <div class="table-responsive">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                        <thead>
                            <tr class="info">
                                <th>S.N.</th>
                                <th>Course Name</th>
                                <th>Description</th>
                                <th>Duration</th>
                                <th>Fees</th>
                                <th>Facilitator</th>
                                <th>Status</th>
                                <th>Actions</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.CourseInfoModelList)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        @i
                                    </td>
                                    <td>@item.CourseName</td>
                                    <td>@item.CourseDesc</td>
                                    <td>@item.CourseDuration</td>
                                    <td>@item.CourseAmount</td>
                                    <td>@item.Facilitator</td>
                                    <td>@item.Status</td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { courseId = item.CourseId }, htmlAttributes: new { @class = "btn btn-sm btn-primary" })
                                        @Html.ActionLink("Delete", "Delete", new { courseId = item.CourseId }, htmlAttributes: new { @class = "btn btn-sm btn-danger" })
                                    </td>
                                </tr>

                                i++;

                            }

                        </tbody>






                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


