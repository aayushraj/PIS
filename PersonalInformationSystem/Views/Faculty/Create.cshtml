@model PersonalInformationSystem.Models.FacultyModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    @Html.ValidationSummary(true)

    <div class="row table-drop">

        <div class="col-xs-12">

            <div class="panel panel-primary">
                <div class="panel-heading">

                    <h4>Add Faculty Information</h4>

                </div>
                <div class="panel-body">
                    <div class="col-xs-12 form-position">
                        <div class="row">

                            <div class="col-xs-12 col-sm-4 form-group">
                                <div class="row">

                                    <div class="col-xs-12"><label>Class</label></div>
                                    <div class="col-xs-12">
                                        @Html.DropDownListFor(model => model.ClassId, PersonalInformationSystem.Utility.Utility.GetClasses(), htmlAttributes: new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-xs-12 col-sm-4 form-group">
                                <div class="row">

                                    <div class="col-xs-12"><label>Faculty</label></div>
                                    <div class="col-xs-12">
                                        @Html.TextBoxFor(model => model.FacultyName, htmlAttributes: new { @class = "form-control", @placeholder = "Faculty Name" })
                                        @Html.ValidationMessageFor(model => model.FacultyName)
                                    </div>
                                </div>

                            </div>
                            <div class="clearfix"></div>

                            <div class="col-xs-12 col-sm-4 form-group">
                                <div class="row">

                                    <div class="col-xs-12"><label>Faculty Description</label></div>
                                    <div class="col-xs-12">
                                        @Html.TextAreaFor(model => model.FacultyDesc, htmlAttributes: new { @class = "form-control", @placeholder = "Description" })
                                        @Html.ValidationMessageFor(model => model.FacultyDesc)
                                    </div>
                                </div>
                            </div>


                            <div class="row col-xs-12">
                                <div class="col-xs-4 ">
                                    <div class="registerbtn col-xs-6">
                                        <input type="submit" class="btn btn-lg btn-success" value="Save" />
                                    </div>
                                    <div class="registerbtn col-xs-6">@Html.ActionLink("Cancel", "Index", "StudentInfo", htmlAttributes: new { @class = "btn btn-lg btn-danger" })</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

