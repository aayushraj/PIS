@model PersonalInformationSystem.Models.FacultyModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    @Html.ValidationSummary(true)

    <div class="row table-drop">

        <div class="col-xs-12">
            @* Messages Section Start *@
            @if (TempData["UpdateFail"] != null)
            {
                <div class="alert alert-warning alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    @TempData["UpdateFail"]
                </div>
            }
            @* Messages Section End *@


            <div class="panel panel-primary">
                <div class="panel-heading">

                    <h4>Add Cousre Information</h4>

                </div>
                <div class="panel-body">
                    <div class="col-xs-12 ">
                        <div class="row">
                            <div class="col-xs-12 col-sm-4 form-group">
                                <div class="row">

                                    <div class="col-xs-12"><label>Class</label></div>
                                    <div class="col-xs-12">
                                        @Html.DropDownListFor(model => model.ClassId, PersonalInformationSystem.Utility.Utility.GetClasses(), htmlAttributes: new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-xs-12 col-sm-4 form-group">
                                <div class="row">

                                    <div class="col-xs-12"><label>Faculty name</label></div>
                                    <div class="col-xs-12">
                                        @Html.TextBoxFor(model => model.FacultyName, htmlAttributes: new { @class = "form-control", @placeholder = "Faculty Name" })
                                        @Html.HiddenFor(model => model.FacultyId)
                                        @Html.ValidationMessageFor(model => model.FacultyName)
                                    </div>
                                </div>
                            </div>

                            <div class="clearfix"></div>

                            <div class="col-xs-12 col-sm-4 form-group">
                                <div class="row">

                                    <div class="col-xs-4">
                                        @Html.CheckBoxFor(model => model.Status)<label>Status</label>
                                    </div>

                                </div>
                            </div>



                            <div class="row col-xs-12">
                                <div class="col-xs-6 col-sm-6 ">
                                    <div class=" col-xs-12 col-sm-4">
                                        <input type="submit" class="btn btn-lg btn-success" value="Update" />
                                    </div>

                                    <div class=" col-xs-12 col-sm-4 ">@Html.ActionLink("Cancel", "Index", "Faculty", htmlAttributes: new { @class = "btn btn-lg btn-danger" })</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
