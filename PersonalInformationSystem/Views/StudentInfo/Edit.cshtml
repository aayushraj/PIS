@model PersonalInformationSystem.Models.StudentInfoModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <h2 class="page-header col-xs-12">Edit Student's Info</h2>

    <div class="col-xs-12">
        <div class="row">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.StudentId)


            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">

                    <div class="col-xs-12"><label>First name</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Middle name</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.MiddleName, new { @class = "form-control", @placeholder = "Middle Name" })
                        @Html.ValidationMessageFor(model => model.MiddleName)
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Last name</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Date of Birth</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.DateOfBirth, new { @class = "form-control", @placeholder = "DOB" })
                        @Html.ValidationMessageFor(model => model.DateOfBirth)
                    </div>
                </div>
            </div>


            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Gender</label></div>
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-xs-12">
                                <span class="col-xs-4"><input type="radio" name="gender" value="male" id="male"> <label for="male">Male</label></span>
                                <span class="col-xs-4"><input type="radio" name="gender" value="female" id="female"><label for="female">Female</label></span>
                                <span class="col-xs-4"><input type="radio" name="gender" value="other" id="othergen"> <label for="othergen">Other</label></span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Street Address</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.Address, new { @class = "form-control", @placeholder = "Street Name" })
                        @Html.ValidationMessageFor(model => model.Address)
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>City name</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.City, new { @class = "form-control", @placeholder = "City" })
                        @Html.ValidationMessageFor(model => model.City)
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Country name</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.Country, new { @class = "form-control", @placeholder = "Country" })
                        @Html.ValidationMessageFor(model => model.Country)
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Email</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.Email, new { @class = "form-control", @placeholder = "Email Address" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
            </div>


            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Contact No</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.MobileNo, new { @class = "form-control", @placeholder = "Mobile" })
                        @Html.ValidationMessageFor(model => model.MobileNo)
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label></label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.ResidenceNo, new { @class = "form-control", @placeholder = "Residence" })
                        @Html.ValidationMessageFor(model => model.MobileNo)
                    </div>
                </div>
            </div>



            <div class="clearfix"></div>
            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Enrollment Date</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.EnrolledDate, new { @class = "form-control", @placeholder = "Enrolled Date" })
                        @Html.ValidationMessageFor(model => model.EnrolledDate)
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Computer Literate</label></div>
                    <div class="col-xs-12">
                        <span class="col-xs-6">@Html.RadioButtonFor(model => model.ComputerLiterate, "Yes", htmlAttributes: new { @checked = "checked" })<label>Yes</label></span>
                        <span class="col-xs-6">@Html.RadioButtonFor(model => model.ComputerLiterate, "No")<label>No</label></span>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Enrollment Date</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.EnrolledDate, new { @class = "form-control", @placeholder = "Enrolled Date" })
                        @Html.ValidationMessageFor(model => model.EnrolledDate)
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>How did you learn about us?</label></div>
                    <div class="col-xs-12">
                        @Html.CheckBox("Poster")<label>Poster</label>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Friends Name</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.EnrolledDate, new { @class = "form-control", @placeholder = "" })
                        @Html.ValidationMessageFor(model => model.EnrolledDate)
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Course Choosed</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.ObjCourseInfoModel.CourseName, new { @class = "form-control", @placeholder = "Course Name" })
                        @Html.ValidationMessageFor(model => model.EnrolledDate)
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Duration(months)</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.ObjCourseInfoModel.CourseDuration, new { @class = "form-control", @placeholder = "Duration" })
                        @Html.ValidationMessageFor(model => model.EnrolledDate)
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label>Payment:</label></div>
                    <div class="col-xs-12"><label>Total</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.ObjCourseInfoModel.CourseAmount, new { @class = "form-control", @placeholder = "Pay" })
                        @Html.ValidationMessageFor(model => model.EnrolledDate)
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label></label></div>

                    <div class="col-xs-12"><label>Advance</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.ObjPaymentModel.PaidAmount, new { @class = "form-control", @placeholder = "Advance" })
                        @Html.ValidationMessageFor(model => model.EnrolledDate)
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-4 form-group">
                <div class="row">
                    <div class="col-xs-12"><label></label></div>

                    <div class="col-xs-12"><label>Due</label></div>
                    <div class="col-xs-12">
                        @Html.EditorFor(model => model.ObjPaymentModel.DueAmount, new { @class = "form-control", @placeholder = "Due" })
                        @Html.ValidationMessageFor(model => model.EnrolledDate)
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row col-xs-12">
                <div class="col-xs-4 col-xs-offset-4">
                    <div class="registerbtn col-xs-6">
                        <input type="submit" class="btn btn-lg btn-success" value="Update" />"
                    </div>
                    <div class="registerbtn col-xs-6">@Html.ActionLink("Cancel", "Index", "StudentInfo", htmlAttributes: new { @class = "btn btn-lg btn-danger" });</div>
                </div>
            </div>
            @*@Html.ActionLink("Register", "Create", "StudentInfo", htmlAttributes: new { @class = "btn btn-lg btn-success", @type="submit" });*@



        </div>
    </div>
}
