@model PersonalInformationSystem.Models.StudentInfoModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row table-drop">
    <div class="col-xs-12 col-lg-12">

        @* Messages Section Start *@

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @TempData["Success"]
            </div>
        }
        @if (TempData["Update"] != null)
        {
            <div class="alert alert-info alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @TempData["Update"]
            </div>
        }

        @if (TempData["Delete"] != null)
        {
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @TempData["Delete"]
            </div>
        }

        @* Messages Section End *@
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>Student's List</h4>
            </div>
            <div class="panel-body">
                <div class="pull-left">
                    <p>
                        @Html.ActionLink("Add New", "Create", "StudentInfo", htmlAttributes: new { @class = "btn btn-sm btn-success" })
                    </p>
                </div>
                <div class="col-xs-4 input-group custom-search-form pull-right">
                    <input type="text" class="form-control" placeholder="Search">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>


                <table class="col-xs-12 table table-bordered table-hover table-striped ">
                    <thead>

                        <tr class="info">
                            <th class="col-xs-2">
                                Full Name
                            </th>
                            <th class="col-xs-1">
                                Date Of Birth
                            </th>
                            <th class="col-xs-1">
                                Mobile No.
                            </th>
                            <th class="col-xs-1">
                                Residence No.
                            </th>
                            <th class="col-xs-1">
                                Email
                            </th>
                            <th class="col-xs-2">
                                Address
                            </th>
                            <th>
                                Gender
                            </th>
                            <th class="col-xs-1">
                                Enrolled Date
                            </th>
                            <th class="col-xs-1.5">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.StudentInfoModelList)
            {
                            <tr>
                                <td>
                                    @item.FirstName @item.MiddleName @item.LastName
                                </td>
                                <td>
                                    @item.DateOfBirth
                                </td>
                                <td>
                                    @item.MobileNo.
                                </td>
                                <td>
                                    @item.ResidenceNo.
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.Address @item.City @item.Country
                                </td>
                                <td>
                                    @item.Gender
                                </td>
                                <td>
                                    @item.EnrolledDate
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { studentId = item.StudentId }, htmlAttributes: new { @class = "btn btn-sm btn-primary" })
                                    <a href="@Url.Action("Delete", new { studentId = item.StudentId })" onclick="return confirm('Do you want to delete?')"><i class="fa fa-trash-o fa-2x"></i></a>



                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>


